{
  "compilerOptions": {
    "module": "esnext",
    "target": "es5",
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "./dist/types",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "jsx": "preserve",
    "lib": ["ES5", "DOM"]
  },
  "include": ["src/**/*.ts"]
}
